<Window x:Class="RoutedEvents.CustomRoutedEvent.Xaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RoutedEvents.CustomRoutedEvent.Xaml"
        ResizeMode="CanMinimize"
        Title="Custom Routed Event"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="1"
          MinHeight="576"
          MinWidth="384">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="_outputListBox"
                 Grid.Row="0"
                 Margin="1">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel VerticalAlignment="Bottom"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <local:SendBox Grid.Row="1"
                       MaxHeight="30"
                       Margin="1"
                       Send="OnSend"/>
    </Grid>
</Window>
